extends layout

block head
  link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lobster+Two")
  link(rel='stylesheet', href='/stylesheets/index.css')

block content
  .index-body
    .title
      h1 Posts

    form.login(method='post', action='/login')
      .login-row
        label.login-label(for="ipt-username") Username
        input.login-ipt#ipt-username(name="username", required)
      .login-row
        label.login-label(for="ipt-password") Password
        input.login-ipt#ipt-password(type="password", name="password", required)
      .login-btn
        button.btn(type='submit') Log in
